/* pages/details/details.wxss */
page{
  background-color: #F2f2f2;
}
.container{
  height: 100%;
}
.swiper-container,
.swiper-container swiper,
.swiper-container .slide-image,
.swiper-container video {
  width: 100%;
  height: 748rpx;
}
.goods-info {
  width:100%;
  padding: 30rpx;
  background-color:#fff; 
  margin-bottom: 20rpx;
  position: relative;
  
}
.goods-info .goods-title{
  line-height: 60rpx;
  padding-bottom: 24rpx;
}
.goods-title {
  font-size: 32rpx;
  line-height: 100rpx;
  padding-left: 40rpx;
}

.container .red{
  color: #f00;
}

.share {
  width: 100rpx;
  font-size: 24rpx;
  text-align: center;
  position: absolute;
  top: 30rpx;
  right:60rpx; 
} 
.share image {
  display: block;
  width: 60rpx;
   height: 60rpx; 
  margin: 0 auto;
}
.goods-infos{
  font-size: 24rpx;
  color: #999;
  width: 76%;
  display: flex;
  flex-direction:row;
  justify-content: space-between; 
  margin-left: 40rpx;
}
.goods-infos text {
  display: flex;
}
.goods-infos .red {
  font-size: 30rpx;
  font-weight: bold;
}
.goods-select {
  width: 100%;
  background-color: #fff;
  text-indent: 60rpx;
  font-size: 32rpx;
  line-height: 100rpx;
  margin-bottom: 20rpx;
}
.goods-select image {
  float: right;
  width: 18rpx;
  height: 28rpx;
  margin: 40rpx;
}
/*商品介绍  */
.goods-des {
  width: 98%;
  background-color:#fff; 
  margin-bottom: 30rpx;
  padding-bottom: 60rpx;
  font-size: 26rpx;
  color: #666;
  padding:10rpx 1%;
}
.goods-des image{
 width: 100%;
 height: 500rpx;
}

.goods-comment{
  width: 100%;
  background-color: #fff;
  padding-bottom: 60rpx;
}
.goods-comment .goods-title{
 border-bottom: 2rpx solid #eee;
}
.comment-info {
  font-size: 32rpx;
  color: #666;
  overflow: hidden;
}
.goods-comment image {
  width: 120rpx;
  height: 120rpx;
}
.comment-img{
  width: 120rpx;
  margin: 16rpx 0 16rpx 10rpx;
  float: left;
  text-align: center;
}
.comment-item {
  float: right;
  width: 78%;
  padding: 20rpx 0 30rpx;
  border-bottom: 2rpx solid #eee;
}
.comment-item view {
  line-height: 2;
}
.comment-item text {
  font-size: 24rpx;
}