<!--pages/to-pay/to-pay.wxml-->
<view class='container'>
  <form bindsubmit='createOrder' report-submit='true'>
    <view class='address-box box'>
      <view class='add-address' hidden='{{hidden}}' bindtap='addAdress'>
        <view > 新增收货地址</view>
      </view>
      <view class='show-address'  hidden='{{!hidden}}'>
        <view class='consignee'>李 17005939434</view>
        <view class='receiving-address'>前山路87号</view>
      </view>
    </view>

    <view class='goodList box'>
      <view class='goods-title'>商品列表</view>
      <view class='goods-info'>
        <image ></image>
        <view class='goods-text'>
          <view class='flex arrow1'>
            <text class='goods-name'>粉色毛衣</text>
            <text class='goods-price'>￥85</text>
          </view>
          <view class='flex gray'>
            <text class='goods-size'>尺码：40 颜色：卡其色</text>
            <text class='goods-num'>x 1</text>
          </view>
        </view>
      </view>
    </view>

    <view class='order box'>
      <view class=' flex'>
        <text>配送方式</text>
        <text class='gray'>包邮</text>
      </view>
      <view class=' flex'>
        <text>备注</text>
        <input class='gray' placeholder='如需备注请输入'></input>
      </view>
    </view>

    <view class='submit'>
      <text class='red'>合计：￥0</text>
      <input value='提交订单'></input>
    </view>

  </form>

</view>
