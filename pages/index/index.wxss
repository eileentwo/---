/* pages/index/index.wxss */
page{
  background-color: #eee;
}
/*轮播图*/
.swiper-container{  
  position: relative;  
  height: 562.5rpx;
}  
.swiper-container .swiper{
  width: 100%;  
  height: 562.5rpx;
}  
.swiper-container swiper-item{
  width: 100%;  
  height: 100%;  
}
.swiper-container .swiper image{  
  width: 100%;  
  height: 100%;  
}  
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #fff;  
  border-radius:50%;   
  opacity: 0.5
}  
.swiper-container .dots .dot.active{  
  opacity: 1
}  
/*搜索框  */
.search-container {
  width: 100%;
  position: fixed;
  top: 0;
  padding: 20rpx 0;
  background-color:rgba(105, 195, 170, 0.3) ;
}
.search-bg{
  height: 70rpx;
  width: 90%;
  margin:0 5% ;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.search-container image{
  width: 40rpx;
  height: 40rpx;
  margin: 15rpx 20rpx;
}
.search-container input{
  font-size: 28rpx;
  width: 500rpx;
}
.search-container button{
  font-size: 28rpx;
  background-color: blueviolet;
  color: #fff;
  align-items: center;
  width: 150rpx;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
}
/*分类导航栏  */
.type-navbar {
  width: 100%;
  white-space: nowrap;
  height: 88rpx;
  text-align: center;
  font-size: 24rpx;
  background-color: #fff;
}
.type-box {
  display: inline-block;
  width: 160rpx;
  line-height: 86rpx;
}
::-webkit-scrollbar {/*设置导航条*/
  width: 0;
  height: 0;
  color: transparent;
}
.type-navbar-item {
  border-bottom: 4rpx solid #fff;
}
.type-item-on {
  border-bottom: 4rpx solid #e64340;
}

  /* 商品列表部分 */
 .goods-container{
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
} 
.goods-item{
  width: 339rpx;
  background-color:#fff;
  margin-bottom: 20rpx;
  font-size: 24rpx;
}
.goods-item image {
  width: 339rpx;
  height: 339rpx;
}
.goods-item text {
  display: block;
  padding-top:24rpx;
  text-indent:24rpx;
}
.goods-price{
  padding-bottom: 24rpx;
  color: #e64340;
}
