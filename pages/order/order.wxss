/* pages/order/order.wxss */
page{
  background-color: #eee;
}
.type-contanier{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  font-size: 28rpx;
  text-align: center;
}
.type{
  width: 150rpx;
  box-sizing: border-box;
  border-bottom: 4rpx solid #fff;
  position: relative;
}
.type-contanier .active{
  border-bottom-color: #f00;
}
.num {
  display:none ;
  width: 10rpx;
  height:10rpx;
  background-color: #f00;
  border-radius: 50%;
  position: absolute;
  top: 28rpx;
  right: 28rpx;
}
.show {
  display: inline-block;
}
.no-order{
  position: relative;
  top: 88rpx;
  padding-top: 203rpx;
  width: 100%;
  text-align: center;
}
.no-order image {
  width: 81rpx;
  height: 96rpx;
  margin-bottom: 31rpx;
}
.no-order view {
  font-size: 28rpx;
  color: #999;
}
/*订单详情列表  */
.order-list{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  background: #fff;
  font-size: 26rpx;
}
.order-item{
  width: 100%;
  border-top: 10rpx solid #eee; 
  padding-left:40rpx;
}
.order-time{
  position: relative;
}
.order-line {
  padding: 20rpx 0;
  border-bottom: 4rpx solid #eee; 
}
.order-num{
  padding-bottom: 40rpx;
}
.order-time .red{
  position: absolute;
  right: 40rpx;
}
.red{
  color: red;
}
.order-img{
  width: 120rpx;
  height: 120rpx;
  background-color: #eee;
  margin-right: 30rpx;
}
.order-price{
   padding: 20rpx 0 50rpx;
   display: flex;
   position: relative;
}
.order-price button {
  background-color: #fff;
  border: 2rpx solid #eee;
  font-size: 26rpx;
  line-height: 60rpx;
  position: absolute;
  right: 40rpx;
}
.order-price .cancel{
  right: 220rpx;
}
.order-price .pay{
  border-color: #f00;
}